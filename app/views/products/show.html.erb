<h1 class="text-center my-4"><%= @product.name %></h1>

<div class="text-center mb-4">
  <%= link_to "Back", products_path, class: "btn btn-secondary me-2" %>
  <%= link_to "Edit", edit_product_path(@product), class: "btn btn-warning me-2" %>
  <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
